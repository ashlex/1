import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JTextField;


public class inv extends JFrame{
	JFrame jf;
	JLabel[] l1= new JLabel[3];
	JLabel[] l2,l3;
	JLabel end;
	JTextField[] tf1=new JTextField[3];
	JButton b1;

	long c=0;
	int N=0,z=0;
	int x=5,y=120;
	
	control control=new control();
	inv(String s){
		jf=new JFrame(s);
		jf.setSize(200, 400);
		//jf.setResizable(false);
		//jf.setLayout(new GridLayout(4, 4, 5, 5));
		jf.setVisible(true);
		jf.setLocationRelativeTo(null);
		//jf1.setDefaultCloseOperation(JFrame.HIDE_ON_CLOSE);
		
		l1[0]= new JLabel("Количество ресурсов");
		l1[1]= new JLabel("Количество программ");
		l1[2]= new JLabel("Количество z");
		end=new JLabel("");
		
		tf1[0]= new JTextField();
		tf1[1]= new JTextField();
		tf1[2]= new JTextField();
		
		b1=new JButton("Принять");
		b1.addActionListener(control);
		
		jf.add(l1[0]);
		jf.add(tf1[0]);
		jf.add(l1[1]);
		jf.add(tf1[1]);
		jf.add(l1[2]);
		jf.add(tf1[2]);
		jf.add(b1);
		jf.add(end);

		l1[0].setLocation(5, 5);
		l1[0].setSize(150, 20);
		tf1[0].setLocation(170, 5);
		tf1[0].setSize(40, 20);

		l1[1].setLocation(5, 30);
		l1[1].setSize(150, 20);
		tf1[1].setLocation(170, 30);
		tf1[1].setSize(40, 20);

		l1[2].setLocation(5, 55);
		l1[2].setSize(150, 20);
		tf1[2].setLocation(170, 55);
		tf1[2].setSize(40, 20);
		
		b1.setLocation(110, 85);
		b1.setSize(100, 25);
	}
	class control implements ActionListener{
		public void actionPerformed(ActionEvent e){
			try{
			if(e.getSource()==b1){
				c=Long.parseLong(tf1[0].getText());
				N=Integer.parseInt(tf1[1].getText());
				z=Integer.parseInt(tf1[1].getText());
				System.out.println("1");
				Constr_Table_input();
			}
			}catch(Exception xe){JOptionPane.showMessageDialog(null, "Введите число!");}
		}
		public void Constr_Table_input(){
			l2=new JLabel[N+1];
			System.out.println("2");
			l3=new JLabel[z];
			System.out.println("3");
			for(int i=-1;i<z;i++){
				System.out.println("4");
				for(int j=0;j<N+1;j++){
					System.out.println("5");
					//jf.add(l2[j]);
					//System.out.println("6");
					l2[j]=new JLabel("<html>r<sub>"+(j+1)+"</sub>(x)");
					jf.add(l2[j]);
					System.out.println("6");
					System.out.println("7");
					l2[j].setLocation(x, y);
					System.out.println("8");
					l2[j].setSize(30, 20);
					System.out.println("9");
					x=x+35;
					System.out.println("Круг "+j);
				}
			}
		}
	}
}
