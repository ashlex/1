
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.SwingUtilities;


public class Main implements ActionListener {
	JFrame jf;
	JButton b1;
	JLabel l1;
	inv inv;
	public Main(){
		jf=new JFrame("Задачи ИСО");
		jf.setSize(800, 600);
		jf.setResizable(false);
		jf.setLayout(new GridLayout(4, 1, 5, 5));
		jf.setVisible(true);
		jf.setLocationRelativeTo(null);
		jf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		b1=new JButton("<html><center>Инвестиционная<br>задача</center>");
		b1.setActionCommand("inv");
		b1.addActionListener(this);
		l1=new JLabel("Ghbdtn");
		jf.add(b1);
		jf.add(b1).setEnabled(false);
		
	}
	public void actionPerformed(ActionEvent e){
		if(e.getActionCommand().equals("inv")){
			inv=new inv("Инвестиционная задача");
		}
	}

	public static void main(String[] args) {
		SwingUtilities.invokeLater(new Runnable(){
			public void run(){
				new Main();
			}
		});
	}

}
